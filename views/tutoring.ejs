              </div>

              <div class="form-group col-lg-4">
                <label for="bookCourse">Course:</label>
                <input type="text" class="form-control" id="bookCourse" name="bookCourse" placeholder="Course">
              </div>

              <div class="form-group col-lg-4">
                <label for="bookUniversity">University:</label>
                <input type="text" class="form-control" id="bookUniversity" name="bookUniversity" placeholder="University">
              </div>
            </div>



            <div class="form-row">
              <div class="form-group">
                <label for="bookComments">Additional comments:</label>
                <textarea class="form-control" id="bookComments" name="bookComments"></textarea>
              </div>
            </div>

            <button onclick="sendEmail()" type="submit" class="btn btn-primary booking-button">Request Booking</button>
